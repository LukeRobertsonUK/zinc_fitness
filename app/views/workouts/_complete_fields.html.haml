= f.fields_for :exercise_sets do |exercise_set_form|
  %h3.exercise_set_header
    = exercise_set_heading(exercise_set_form.object)
  -unless exercise_set_form.object.time.blank?
    .interval_info
      = "Interval: #{pluralize(exercise_set_form.object.time, 'sec')}"
  -unless exercise_set_form.object.distance.blank?
    .distance_info
      = "Distance: #{pluralize(exercise_set_form.object.distance, 'metre')}"
  -unless exercise_set_form.object.suggested_weight.blank?
    .weight_info
      ="Target Weight: #{pluralize(exercise_set_form.object.suggested_weight, 'kg')}"
    .field.spacer
      = exercise_set_form.label :achieved_weight, "Weight (kg):", class: "form_label weight_label"
      =exercise_set_form.number_field :achieved_weight, min: 0, step: 0.5, class: "weight_entry"

  .field.spacer
    =exercise_set_form.label :notes, "Notes:", class: "form_label notes_label"
    =exercise_set_form.text_field :notes, class: "notes_entry"


