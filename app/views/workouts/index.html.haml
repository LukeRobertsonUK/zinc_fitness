%h1 Listing workouts
%table
  %tr
    %th Description
    %th Due date
    %th User
    %th
    %th
    %th
  - @workouts.each do |workout|
    %tr
      %td= workout.description
      %td= workout.due_date
      %td= workout.user.full_name
      %td= link_to 'Show', workout
      %td= link_to 'Edit', edit_workout_path(workout)
      %td= link_to 'Destroy', workout, method: :delete, data: { confirm: 'Are you sure?' }

