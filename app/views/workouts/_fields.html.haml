= f.fields_for :exercise_sets do |exercise_set_form|
  .set_box
    .field.exercise_adder
      = exercise_set_form.collection_select :exercise_id, Exercise.all, :id, :name, {include_blank: "Select Exercise"}, {class: "exercise_selector"}
      = exercise_set_form.link_to_remove 'Remove', class: "btn btn-danger btn-xs"
    .reps_and_rest
      .field
        = exercise_set_form.label :sets, "Sets:", class: "workout_creation_label"
        = exercise_set_form.number_field :sets, min: 1, step: 1, class: "four_digit_entry"
      .field
        = exercise_set_form.label :rest_period, "Rest (secs):", class: "workout_creation_label"
        = exercise_set_form.number_field :rest_period, min: 0, step: 5,  class: "four_digit_entry"
    .option_fields
      .field
        = exercise_set_form.label :reps, "Reps:", class: "workout_creation_label"
        =exercise_set_form.number_field :reps, min: 1, step: 1, class: "four_digit_entry weight_entry"
      .field
        = exercise_set_form.label :distance, "Distance (m):", class: "workout_creation_label"
        = exercise_set_form.number_field :distance, min: 0, step: 1, class: "four_digit_entry distance_entry"
      .field
        =exercise_set_form.label :time, "Interval (secs):", class: "workout_creation_label"
        =exercise_set_form.number_field :time, min: 0, step: 1, class: "four_digit_entry interval_entry"




= f.link_to_add '+ Activity', :exercise_sets, class: "btn btn-success btn-lg full_width"


